<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/enterCodeTextView"
        style="@style/enter_text_style"
        android:layout_marginTop="155dp"
        android:text="@string/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <kz.home.pincode.presentation.EnterPinCodeTextView
        android:id="@+id/enterPinCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        style="@style/button_digit_style"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button1"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/enterPinCodeTextView" />

    <Button
        android:id="@+id/button2"
        style="@style/button_digit_style"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button2"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterPinCodeTextView" />

    <Button
        android:id="@+id/button3"
        style="@style/button_digit_style"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button3"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/enterPinCodeTextView" />

    <Button
        android:id="@+id/button4"
        style="@style/button_digit_style"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button4"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button1" />

    <Button
        android:id="@+id/button5"
        style="@style/button_digit_style"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button5"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2" />

    <Button
        android:id="@+id/button6"
        style="@style/button_digit_style"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button6"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/button7"
        style="@style/button_digit_style"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button7"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <Button
        android:id="@+id/button8"
        style="@style/button_digit_style"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button8"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button5" />

    <Button
        android:id="@+id/button9"
        style="@style/button_digit_style"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button9"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button6" />

    <Button
        android:id="@+id/buttonClear"
        style="@style/button_digit_style"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/buttonC"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/button0"
        style="@style/button_digit_style"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_shape_selector"
        android:text="@string/button0"
        android:textColor="@drawable/button_text_color"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button8" />

    <Button
        android:id="@+id/buttonOk"
        style="@style/button_digit_style"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_ok_selector"
        android:text="@string/buttonOk"
        android:textColor="@color/stroke"
        app:backgroundTint="@null"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button9" />

</androidx.constraintlayout.widget.ConstraintLayout>