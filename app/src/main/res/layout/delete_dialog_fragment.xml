<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="321dp"
        android:layout_height="179dp"
        android:background="@drawable/rectangle_background_12radius">

        <TextView
            android:id="@+id/dialogText"
            style="@style/dialogText"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="-1sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="103dp"
            android:background="@drawable/rectangle_background_6radius"
            android:text="@string/dialog_button_text1"
            android:textAppearance="@style/dialogText"
            android:textColor="@color/dialog_button_text"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="121dp"
            android:layout_height="55dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="103dp"
            android:background="@drawable/rectangle_background_6radius"
            android:text="@string/dialog_button_text2"
            android:textAppearance="@style/dialogText"
            android:textColor="@color/dialog_button_text"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>